<div class="col-sm-2" style="background-color:red;">Red</div>
    <div class="col-sm-8" style="background-color:blue;">Blue</div>
    <div class="col-sm-2" style="background-color:yellow;">Yellow</div>

<h1>ペットのみんな</h1>
<div>
  <% @animals.each do |animal| %>
    <tr>
      <%= link_to animal_path(animal) do %>
        <td>
        <% if animal.animal_image.attached? %>
          <%= image_tag animal.animal_image, :size => '300x200' %>
        <% else %>
          <%= image_tag "no-image.jpeg", :size => '300x200' %>
        <% end %>
        </td>
        <td>
        <%= animal.animalname %>
        </td>
      <% end %>
      <td>
      <%= animal.body %>
      </td>
      <td>
        <% if current_user.already_favorited?(animal) %>
          <%= link_to "いいねを外す", animal_favorites_path(animal), method: :delete %>
        <% else %>
          <%= link_to "いいね", animal_favorites_path(animal), method: :post %>
        <% end %>
        <%= animal.favorites.count %>
      </td>
    </tr>
  <% end %>
</div>

<%= form_tag animals_path, method: :get, class: 'boards__searchForm' do %>

  <% @tags.each do |tag| %>
      <div class="tag-box">
        <%= link_to tag.name, animals_path(name: tag.id) %>
      </div>
  <% end %>
      <div class="tag-box">
        <%= link_to "ペットのみんな", animals_path %>
      </div>
<% end %>


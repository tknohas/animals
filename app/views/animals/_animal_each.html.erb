<div class="container mt-5">
  <div class="row">
    <% @animals.each do |animal| %>
      <div class="col-md-4">
        <div class="card">
        <%= link_to animal.user.username, user_path(animal.user.id) %>
          <div class="card-top text-center">
            <%= link_to animal_path(animal) do %>
              <% if animal.animal_images.attached? %>
                <%= image_tag animal.animal_images.first, :size => '400x300' %>
              <% else %>
                <%= image_tag "no-image.jpeg", :size => '300x200' %>
              <% end %>
            <% end %>
          </div>
          <div class="card-body text-center">
            <h4 class="card-title"><%= link_to animal.animalname, animal_path(animal), class:"text-decoration-none" %></h4>
            <p class="card-text"><%= animal.body %></p>
            <% if user_signed_in? %>
              <% if current_user.already_favorited?(animal) %>
                <%= link_to "いいねを外す", animal_favorites_path(animal), method: :delete %>
              <% else %>
                <%= link_to "いいね", animal_favorites_path(animal), method: :post %>
              <% end %>
            <% end %>
          </div>
          <% if animal.user == current_user %>
            <%= link_to "編集", edit_animal_path(animal), class:"btn btn-success" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

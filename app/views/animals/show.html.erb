<div class="row">
  <div class="mr-auto">
    <h2 class="mt-4">
      おなまえ：<%= @animal.animalname %>
      <% if @animal.human_attribute_enum(:male_or_female) == "オス" %>
        くん
      <% else %>
        ちゃん
      <% end %>
      <% if current_user.already_favorited?(@animal) %>
        <%= link_to animal_favorites_path(@animal), method: :delete do %>
          <i class="fa-solid fa-star"></i>
        <% end %>
      <% else %>
        <%= link_to animal_favorites_path(@animal), method: :post do %>
          <i class="fa-regular fa-star"></i>
        <% end %>
      <% end %>
    </h2>
  </div>
</div>
<div class="row row-cols-auto justify-content-center" style="margin: 0px auto;">
  <div class="card" style="width: 50rem; border-style: none;">
    <div class="card-top ms-auto">
      <% if @animal.user.id == current_user.id %>
        <i class="fa-solid fa-pen"></i><%= link_to "編集", edit_animal_path, class:"btn btn-white btn-lg fw-bold" %>
      <% end %>
    </div>
    <div>
      <% if @animal.animal_images.length < 2 %>
        <% @animal.animal_images.each do |image| %>
            <%= image_tag image, class:"d-block my-5 w-100"  %>
        <% end %>
      <% else %>
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <% @animal.animal_images.first(1).each do |image| %>
                <%= image_tag image, class:"d-block my-5 w-100" %>
              <% end %>
            </div>
            <div class="carousel-item">
              <% @animal.animal_images.drop(1).each do |image| %>
                <%= image_tag image, class:"d-block my-5 w-100" %>
              <% end %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
      <% end %>
      <p style="font-size: 20px;"><%= @animal.body %></p>
    </div>
  </div>
</div>
<p><%= link_to 'ペットのみんなへ', animals_path, class:"btn btn-outline-dark" %>

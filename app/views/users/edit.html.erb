<h1 class="mt-4 text-center">プロフィール設定</h1>
<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <%= form_with model: @user do |f| %>
        <% if @user.errors.any? %>
          <div class="notification bg-warning">
            <h2><%= pluralize(@user.errors.count, "error") %>が発生しています。</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :user_image ,"アイコン画像" %>
          <%= f.file_field :user_image, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :username ,"名前" %>
          <%= f.text_field :username, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :profile ,"自己紹介" %>
          <%= f.text_area :profile, class:"form-control" %>
        </div>
          
        <div class="text-center">
          <p><br><%= f.submit "編集を完了する", class:"btn btn-primary" %></p>
          <p><%= link_to "マイページへ戻る", user_path(@user) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

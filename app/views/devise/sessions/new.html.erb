<h1 class="mt-4 text-center">ログイン</h1>
<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, class:"fw-bold" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class:"fw-bold" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class:"fw-bold" %>
          </div>
        <% end %>

        <div class="actions text-center mt-3">
          <%= f.submit "ログインする", class:"btn btn-outline-success" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

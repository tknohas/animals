<% if user_signed_in? %>
  <% if current_user.already_favorited?(animal) %>
    <%= link_to animal_favorite_path(animal), class: "already-favorite-btn", method: :delete, remote: true, data: {"turbolinks" => false} do %>
      <i class="fa-solid fa-star text-warning"></i>
    <% end %>
  <% else %>
    <%= link_to animal_favorite_path(animal), class: "favorite-btn", method: :post, remote: true, data: {"turbolinks" => false} do %>
      <i class="fa-regular fa-star text-warning good"></i>
    <% end %>
  <% end %>
<% end %>

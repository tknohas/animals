<% if user_signed_in? %>
  <% if current_user.already_favorited?(@animal) %>
    <%= link_to animal_favorite_path(@animal), method: :delete, remote: true do %>
      <i class="fa-solid fa-star"></i>
    <% end %>
  <% else %>
    <%= link_to animal_favorite_path(animal), method: :post, remote: true do %>
      <i class="fa-regular fa-star"></i>
    <% end %>
  <% end %>
<% end %>

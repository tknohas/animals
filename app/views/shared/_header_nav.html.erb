              <%= link_to "みなさんのおすすめ施設", facilities_path, class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "ユーザーのみなさん", users_path, class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'いいね', user_favorites_path(current_user.id), class:"nav-link" %>
            </li>
          </ul>
          <ul class="navbar-nav d-block d-sm-none">
            <li class="nav-item dropdown">
              <div class="dropdown d-flex flex-row">
                <button class="btn dropdown-toggle nav-link" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                  投稿する
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                  <li><%= link_to "ペットの投稿", new_animal_path, class:"nav-link" %></li>
                  <li><%= link_to "施設の投稿", new_facility_path, class:"nav-link" %></li>

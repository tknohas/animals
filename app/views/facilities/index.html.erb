<h1 class="text-center mt-4"><i class="fa-solid fa-otter"></i>みなさんのおすすめ施設<i class="fa-solid fa-otter"></i></h1>

<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">施設名</th>
            <th scope="col">紹介文</th>
            <th scope="col">住所</th>
            <th scope="col">作成日</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @facilities.each do |facility| %>  
            <tr class="mr-3">
              <td><%= link_to facility.facility_name, facility_path(facility) %></td>
              <td><%= facility.introduction %></td>
              <td><%= facility.address %></td>
              <td><%= facility.created_at.strftime("%Y/%m/%d") %></td>
              <% if facility.user_id == current_user.id %>
                <td><%= link_to "編集", edit_facility_path(facility), class:"text-decoration-none" %></td>
                <td><%= link_to "削除", facility, method: :delete, data: {confirm: "削除しますか？"}, class:"text-decoration-none"  %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


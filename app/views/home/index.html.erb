<div class="home">
  <div class="home-main">
    <div class="container">
      <div class="row col-lg-6">
        <div class="form-area mt-4">
          <%= form_tag(animals_search_path, method: :get) do %>
            <%= label_tag :検索 %>
            <%= text_field_tag "keyword", "",{ class: "form-control mb-4", placeholder: "犬種や猫種、ニホンアマガエルなど" } %>
            <%= submit_tag "探す" ,{ class: "form-control btn-primary mb-4" } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  

  <div class="container">
    <div class="panel-area m-5">
      <h2 class="section-title">みなさんのペットたち</h2>
      <div class="row">
        <% @tags.each do |tag| %>
          <div class="col-md-6">
            <%= link_to tag.name, animals_path(name: tag.id) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="mt-5">
      <h2>新着投稿</h2>
      <%= render 'animals/animal_each' %>
    </div>
  </div>
</div>
